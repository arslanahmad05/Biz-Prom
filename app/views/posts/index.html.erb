<%= render 'shared/header' %>
<div class="container-fluid">
  <div class="col-lg-12">
    <div class="row my-3">
      <%= render 'shared/left_sidebar' %>
      <div class="col-lg-9">
        <div class="row">
          <div class="col-lg-8">
            <%= render 'shared/create_post' %>
            <% @posts.each do |post| %>
              <%= render 'shared/post_card', post: post %>
            <% end %>
          </div>
          <%= render 'shared/chat_container' %>
        </div>
      </div>
    </div>
  </div>
</div>