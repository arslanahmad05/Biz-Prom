<div class="main">
  <!-- Sign up form -->
  <section class="signup">
    <div class="container">
      <div class="row signup-content">
        <div class="col-lg-6">
          <div class="signup-form">
            <h2 class="form-title">Sign Up</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'register-form') do |f| %>
              <div class="form-group">
                <label for="email"><i class="fa fa-envelope" aria-hidden="true"></i></label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email" %>
              </div>
              <div class="form-group">
                <br/>
                <label for="pass"><i class="fa fa-lock mb-4" aria-hidden="true"></i></label>
                <%= f.password_field :password, autocomplete: "current-password" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
              <div class="form-group">
                <label for="pass"><i class="fa fa-lock" aria-hidden="true"></i></label>
                <%= f.password_field :password_confirmation, autocomplete: "current-password" %>
              </div>
              <div class="form-group form-button">
                <%= f.submit "Sign up", class:"form-submit" %>
              </div>
              <%= render "users/shared/links" %>
            <% end %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="signup-image">
            <figure class="m-0">
              <%= image_tag 'signin-image.jpg' %>
            </figure>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
