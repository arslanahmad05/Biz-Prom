<div class="col-lg-3">
  <div class="card boxes_main pt-2 mb-3">
    <ul class="side_navigation mb-5">
      <li>
        <%= link_to 'Follower', user_user_followers_path %>
      </li>
      <li>
        <%= link_to 'Following', user_user_follows_path %>
      </li>
      <li>
        <%= link_to 'All Users', all_users_path %>
      </li>
      <li>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
      </li>
    </ul>
  </div>

  <div class="card boxes_main pt-2">
    <div class="col-lg-12 col-left">
      <a href="img/profile.jpg" class="lightbox">
        <%= image_tag current_user.present? && current_user.profile.present? && current_user.profile.avatar.present? ? current_user.profile.avatar : 'profile.jpg', class:"profile_img"  %>
      </a>
      <div class="card-body">
        <div class="text-center pt-4">
          <strong>
            <h6 class="pt-2">
              <%= "#{current_user.profile.user_name}" if current_user.present? && current_user.profile.present? %>
            </h6>
          </strong>
          <small>
            <%= "#{current_user.profile.first_name} #{current_user.profile.last_name}" if current_user.present? && current_user.profile.present? %>
          </small>
        </div>
        <p class="mb-3"><%= "#{current_user.profile.company_bio}" if current_user.present? && current_user.profile.present? %>.</p>
        <p class="text-muted small_font mb-2">Location</p>
        <p class="mb-3"><%= "#{current_user.profile.city}, #{current_user.profile.country}" if current_user.present? && current_user.profile.present? %>.</p>
        <p class="text-muted small_font mb-2">Company Name</p>
        <p class="mb-3"><%= "#{current_user.profile.company_name}" if current_user.present? && current_user.profile.present? %></p>
        <p class="text-muted small_font mb-2">Email</p>
        <p class="mb-3"><%= "#{current_user.email}" if current_user.present? %></p>
      </div>
    </div>
  </div>
</div>