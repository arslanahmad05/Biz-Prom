<% if user.followed_by?(current_user) %>
  <%= form_tag unfollows_path(user_id: user.id), method: :post, remote: true do %>
    <%= button_tag 'unfollow', class: 'btn btn-outline-secondary ml-auto' %>
  <% end %>
<% else %>
  <%= form_tag follows_path(user_id: user.id), method: :post, remote: true do %>
    <%= button_tag 'follow', class: 'btn btn-outline-success ml-auto' %>
  <% end %>
<% end %>