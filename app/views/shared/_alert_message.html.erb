<% if notice.present? %>
  <div class="position-absolute z_index_up alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong> <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<% if alert.present? %>
  <div class="position-absolute z_index_up alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error!</strong> <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>